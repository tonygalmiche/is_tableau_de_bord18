<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vue formulaire du tableau de bord -->
    <record id="view_is_tableau_de_bord_form" model="ir.ui.view">
        <field name="name">is.tableau.de.bord.form</field>
        <field name="model">is.tableau.de.bord</field>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <form string="Tableau de bord">
                <header>
                    <button name="action_view_dashboard" string="Voir le tableau de bord" type="object" class="btn-primary" invisible="not id"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group string="Éléments du tableau de bord">
                        <field name="line_ids" context="{'form_view_ref': 'is_tableau_de_bord18.view_is_tableau_de_bord_line_edit_form'}">
                            <list>
                                <field name="sequence" widget="handle"/>
                                <button name="action_open_filter" type="object" icon="fa-eye"    title="Ouvrir en plein écran" invisible="not filter_id"/>
                                <button name="action_edit_filter" type="object" icon="fa-search" title="Ouvrir le filtre"      invisible="not filter_id"/>
                                <button name="action_duplicate_line" type="object" icon="fa-copy" title="Dupliquer cette ligne"/>
                                <field name="name"/>
                                <field name="model_id" optional="show"/>
                                <field name="user_id" optional="hide"/>
                                <field name="filter_id" optional="hide"/>
                                <field name="width" optional="show"/>
                                <field name="height" optional="show"/>
                                <field name="display_mode" optional="show"/>
                                <field name="graph_chart_type" optional="hide"/>
                                <field name="graph_aggregator" optional="hide"/>
                                <field name="pivot_row_groupby" optional="hide"/>
                                <field name="pivot_col_groupby" optional="hide"/>
                                <field name="pivot_measure" optional="hide"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue formulaire dédiée pour l'édition de ligne depuis le dashboard -->
    <record id="view_is_tableau_de_bord_line_edit_form" model="ir.ui.view">
        <field name="name">is.tableau.de.bord.line.edit.form</field>
        <field name="model">is.tableau.de.bord.line</field>
        <field name="priority" eval="10"/>
        <field name="arch" type="xml">
            <form string="Modification de la ligne du tableau de bord">
                <sheet>
                    <group>
                        <group string="Sélection du filtre">
                            <field name="model_ids" widget="many2many_tags" invisible="1"/>
                            <field name="model_id" options="{'no_create': True, 'no_open': True}" domain="[('id', 'in', model_ids)]"/>
                            <field name="user_id" options="{'no_create': True}"/>
                            <field name="filter_domain" invisible="1"/>
                            <field name="filter_id" options="{'no_create': True}" domain="filter_domain"/>
                        </group>
                        <group string="Affichage">
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="width"/>
                            <field name="height"/>
                        </group>
                    </group>
                    <group string="Configuration de l'affichage">
                        <field name="display_mode"/>
                    </group>
                    <notebook invisible="display_mode not in ['graph', 'pivot', 'list']">
                        <page string="Configuration Graphique" invisible="display_mode != 'graph'">
                            <group>
                                <field name="graph_chart_type"/>
                                <field name="graph_aggregator"/>
                            </group>
                        </page>
                        <page string="Configuration Pivot" invisible="display_mode != 'pivot'">
                            <group>
                                <field name="pivot_row_groupby" placeholder="ex: invoice_date:year"/>
                                <field name="pivot_col_groupby" placeholder="ex: partner_id"/>
                                <field name="pivot_measure" placeholder="ex: price_subtotal"/>
                            </group>
                        </page>
                        <page string="Champs de la liste" invisible="display_mode != 'list'">
                            <field name="field_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="field_name"/>
                                    <field name="visible" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue liste du tableau de bord -->
    <record id="view_is_tableau_de_bord_list" model="ir.ui.view">
        <field name="name">is.tableau.de.bord.list</field>
        <field name="model">is.tableau.de.bord</field>
        <field name="arch" type="xml">
            <list string="Tableaux de bord">
                <button name="action_view_dashboard" string="Voir" type="object" icon="fa-eye"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Vue kanban pour l'affichage des tableaux de bord -->
    <record id="view_is_tableau_de_bord_kanban" model="ir.ui.view">
        <field name="name">is.tableau.de.bord.kanban</field>
        <field name="model">is.tableau.de.bord</field>
        <field name="arch" type="xml">
            <kanban string="Tableaux de bord" class="o_kanban_dashboard">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click" style="min-height: 150px;">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary"><strong><field name="name"/></strong></div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Gérer" title="Gérer"/>
                                    </a>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-12 text-center">
                                        <button type="object" name="action_view_dashboard" class="btn btn-primary">
                                            <i class="fa fa-eye"/> Voir le tableau de bord
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <a role="menuitem" type="object" name="action_view_dashboard" class="dropdown-item">Voir le tableau de bord</a>
                                <a role="menuitem" type="edit" class="dropdown-item">Modifier</a>
                                <a role="menuitem" type="delete" class="dropdown-item">Supprimer</a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue dashboard personnalisée -->
    <record id="view_is_tableau_de_bord_dashboard" model="ir.ui.view">
        <field name="name">is.tableau.de.bord.dashboard</field>
        <field name="model">is.tableau.de.bord</field>
        <field name="priority" eval="99"/>
        <field name="arch" type="xml">
            <form string="Tableau de bord" class="o_dashboard_form">
                <div class="o_dashboard_view">
                    <div class="o_dashboard_title mb-3 d-flex align-items-center justify-content-between">
                        <button string="" type="object" name="action_edit_dashboard" class="btn btn-sm btn-light" title="Modifier le tableau de bord">
                            <i class="fa fa-pencil"/>
                        </button>
                        <h2 class="mb-0"><field name="name" readonly="1"/></h2>
                        <div class="btn-group">
                            <!-- <button string="" type="object" name="action_back_to_list" class="btn btn-sm btn-light" title="Retour à la liste">
                                <i class="fa fa-arrow-left"/>
                            </button> -->
                        </div>
                    </div>
                    <div id="dashboard_container" class="container-fluid">
                        <!-- Les éléments seront générés dynamiquement par JavaScript -->
                    </div>
                    <!-- Champs cachés pour accéder aux données -->
                    <div style="display: none;">
                        <field name="line_ids" readonly="1">
                            <list>
                                <field name="sequence"/>
                                <field name="name"/>
                                <field name="model_id"/>
                                <field name="user_id"/>
                                <field name="filter_id"/>
                                <field name="width"/>
                                <field name="height"/>
                                <field name="display_mode"/>
                                <field name="graph_chart_type"/>
                                <field name="graph_aggregator"/>
                                <field name="pivot_row_groupby"/>
                                <field name="pivot_col_groupby"/>
                                <field name="pivot_measure"/>
                            </list>
                        </field>
                    </div>
                </div>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <!-- Action pour la gestion des tableaux de bord -->
    <record id="action_is_tableau_de_bord_manage" model="ir.actions.act_window">
        <field name="name">Gestion des tableaux de bord</field>
        <field name="res_model">is.tableau.de.bord</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_is_tableau_de_bord_list')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_is_tableau_de_bord_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier tableau de bord !
            </p>
            <p>
                Les tableaux de bord vous permettent d'afficher plusieurs recherches enregistrées sur une même page.
            </p>
        </field>
    </record>

    <!-- Action pour afficher la liste des tableaux de bord disponibles -->
    <record id="action_is_tableau_de_bord_view" model="ir.actions.act_window">
        <field name="name">Mes tableaux de bord</field>
        <field name="res_model">is.tableau.de.bord</field>
        <field name="view_mode">kanban,list</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_is_tableau_de_bord_kanban')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_is_tableau_de_bord_list')})]"/>
        <field name="domain">[('active', '=', True)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun tableau de bord disponible !
            </p>
            <p>
                Créez d'abord vos tableaux de bord dans la section "Configuration".
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_is_tableau_de_bord_root"
              name="Tableaux de bord"
              sequence="10"/>
              
    <!-- Menu pour visualiser les tableaux de bord -->
    <menuitem id="menu_is_tableau_de_bord_view"
              name="Mes tableaux de bord"
              parent="menu_is_tableau_de_bord_root"
              action="action_is_tableau_de_bord_view"
              sequence="10"/>

    <!-- Menu pour la configuration -->
    <menuitem id="menu_is_tableau_de_bord_config"
              name="Configuration"
              parent="menu_is_tableau_de_bord_root"
              sequence="20"/>
              
    <menuitem id="menu_is_tableau_de_bord_manage"
              name="Gestion des tableaux de bord"
              parent="menu_is_tableau_de_bord_config"
              action="action_is_tableau_de_bord_manage"
              sequence="10"/>

</odoo>
