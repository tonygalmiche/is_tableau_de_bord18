<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_tableau_de_bord" model="ir.module.category">
        <field name="name">Tableaux de bord</field>
        <field name="description">Gestion des tableaux de bord personnalisés</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_tableau_de_bord_user" model="res.groups">
        <field name="name">Utilisateur</field>
        <field name="category_id" ref="module_category_tableau_de_bord"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Les utilisateurs peuvent visualiser les tableaux de bord</field>
    </record>

    <record id="group_tableau_de_bord_manager" model="res.groups">
        <field name="name">Gestionnaire</field>
        <field name="category_id" ref="module_category_tableau_de_bord"/>
        <field name="implied_ids" eval="[(4, ref('group_tableau_de_bord_user'))]"/>
        <field name="comment">Les gestionnaires peuvent créer et modifier les tableaux de bord</field>
    </record>
</odoo>
